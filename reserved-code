<script>
    function slug(str) {
        var _slug = '';
        var trimmed = jQuery.trim(str);
        _slug = trimmed.replace(/[^a-z0-9-]/gi, '-').
        replace(/-+/g, '-').
        replace(/^-|-$/g, '');
        return _slug.toLowerCase();
    };
    
    jQuery(document).ready(function(){
        jQuery('a#more-courses').click(function(){
            var sliderContent='';
            jQuery.ajax({
                url: "<?php echo SITE_URL; ?>REST/fetch-courses.php",
                type: 'POST',
                cache: false,
                success : function(data, status) {
                    if(data.status != 'undefined' && data.status != 1 ){ 
                        jQuery("#messageBox").html('<div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">&times;</button>Category loading error. '+data.msg ? data.msg : data+'</div>');
                    }
                    else if(data.status ==1){
                        jQuery.each(data.info, function(i, item) {
                            sliderContent += '<div class="isotope_item isotope_item_courses isotope_item_courses_3 isotope_column_3 flt_'+item.id+'">\n\
                            <article class="post_item post_item_courses post_item_courses_3post_format_standard odd"> \n\
                            <div class="post_content isotope_item_content ih-item colored square effect_dir left_to_right"> \n\
                            <div class="post_featured img"> <a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/"> \n\
                            <img class="wp-post-image" width="400" height="400" alt="'+item.name+'" src="<?php echo MEDIA_FILES_PATH1.'course-image/'; ?>'+item.image+'">\n\
                            </a> <h4 class="post_title"> <a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/">'+item.name+'</a>\n\
                            </h4> <div class="post_descr"> <div class="post_price"> <span style="font-weight:bold">'+item.cost+'</span> \n\
                            </div><div class="post_category"> <a href="<?php echo SITE_URL.'category/'; ?>'+item.category+'/'+slug(item.categoryName)+'">'+item.categoryName+'</a> </div></div></div>\n\
                            <div class="post_info_wrap info"> <div class="info-back"> <h4 class="post_title" style="text-align:center"> <a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/">'+item.name+'</a> </h4> \n\
                            <div class="post_descr"> <p style="text-align:justify"><a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/">'+item.description+'..</a></p>\n\
                            <div class="post_buttons"> <div class="post_button"> <a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/" class="sc_button sc_button_square sc_button_style_filled sc_button_bg_link sc_button_size_small">MORE</a> </div><div class="post_button"> \n\
                            <a href="<?php echo SITE_URL.'course/'; ?>'+item.id+'/'+slug(item.name)+'/" class="sc_button sc_button_square sc_button_style_filled sc_button_bg_link sc_button_size_small">BUY NOW</a> </div></div></div></div></div></div></article></div>';
                        });
                    } 
                    //alert(sliderContent);
                    jQuery('div#courseslist').append(sliderContent).addClass('isotope_wrap');
                }
            });
        });
    });
    </script>